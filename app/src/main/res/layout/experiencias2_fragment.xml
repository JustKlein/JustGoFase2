<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_pesquisa"
            android:background="@drawable/borda_geral"/>

         <EditText
             android:layout_width="250dp"
             android:layout_height="40dp"
             android:hint="@string/pesquisa"
             android:paddingLeft="10dp"
             android:id="@+id/campodePesquisa"
             android:background="@drawable/borda_geral"/>
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Pesquisar"
        android:id="@+id/botaoPesquisar"
        android:textColor="@color/letraBotao"
        android:background="@drawable/borda_botao"
        android:layout_gravity="center"/>
    <ListView
        android:id="@+id/listViewRotasPesquisa"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2"
    tools:context="com.example.justgo.CadastroRota.FinalizarCadastroRota">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finalizarCadastroRota"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/letra"
            android:layout_margin="5dp"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:id="@+id/nomeRota"
            android:hint="@string/tituloRota"
            android:background="@drawable/borda_geral"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:id="@+id/descricaoRota"
            android:hint="@string/descricaoRota"
            android:inputType="text"
            android:background="@drawable/borda_geral"
            />

        <ListView
            android:id="@+id/listViewdePontos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="botaoFinalizarCadastroRotaePontos"
        android:background="@drawable/borda_botao"
        android:layout_gravity="center"
        android:textColor="@color/letraBotao"
        android:text="@string/finalizar"/>
    </LinearLayout>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundo"
        tools:context="com.example.justgo.LogineCadastro.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/borda"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_cadastro" />

        <EditText
            android:id="@+id/nomeCadastro"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/borda_cadastro"
            android:hint="@string/nome"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/emailCadastro"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/borda_cadastro"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:layout_margin="5dp"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/senhaCadastro"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/borda_cadastro"
            android:hint="@string/senha"
            android:inputType="textPassword"
            android:layout_margin="5dp"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/ConfirmarSenhaCadastro"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/borda_cadastro"
            android:hint="@string/confirmarSenha"
            android:inputType="textPassword"
            android:layout_margin="5dp"
            android:paddingLeft="5dp" />

        <Button
            android:id="@+id/botaoCadastrar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/borda_botao"
            android:onClick="botaoCadastrar"
            android:text="@string/cadastre"
            android:textColor="@color/letraBotao" />

    </LinearLayout>
</LinearLayout>